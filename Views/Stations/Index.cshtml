@model IEnumerable<MyFirstWebApp.Models.Station>

@{
    ViewData["Title"] = "Stations";
}

<!-- Bootstrap Icons を使う場合、必要ならこのCDNを追加 -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-5">
    <h1 class="text-center mb-4">Stations一覧</h1>

    <div class="d-flex justify-content-between mb-4">
        <a class="btn btn-lg btn-success" href="/Stations/Create">
            <i class="bi bi-plus-lg"></i> 新規作成
        </a>
        <a class="btn btn-secondary" href="/Top/Index">
            <i class="bi bi-house-door"></i> TOPページへ戻る
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Kana</h6>
                        <p class="card-text">路線名: @item.LineName</p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a href="/Stations/Edit/@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> 編集
                            </a>
                            <a href="/Stations/Details/@item.Id" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-eye"></i> 詳細
                            </a>
                            <a href="/Stations/Delete/@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> 削除
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
